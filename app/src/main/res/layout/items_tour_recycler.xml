<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/tour_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/box_shadow"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundOutline2"
        app:srcCompat="@drawable/popular1" />
    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tour_name"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:fontFamily="@font/open_sans_bold"
        android:maxLines="2"
        android:text="Nasi Padang"
        android:paddingLeft="10dp"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tour_image"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/ngaySinh"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:maxLines="2"
        android:text="Ngay sinh:"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tour_name"
        app:layout_constraintStart_toStartOf="@+id/tour_name"
        app:layout_constraintTop_toBottomOf="@+id/tour_name" />
    <TextView
        android:id="@+id/checkIn"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:maxLines="2"
        android:text="Check in:"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/ngaySinh"
        app:layout_constraintStart_toStartOf="@+id/ngaySinh"
        app:layout_constraintTop_toBottomOf="@+id/ngaySinh" />

</androidx.constraintlayout.widget.ConstraintLayout>
