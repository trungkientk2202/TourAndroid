<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_tour"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundOutline"
        tools:srcCompat="@drawable/asiafood2" />

    <TextView
        android:id="@+id/txt_diemDen_tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/img_tour"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_tour"
        app:layout_constraintTop_toTopOf="@+id/img_tour" />

    <TextView
        android:id="@+id/txt_gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_diemDen_tour"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/img_tour"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/txt_diemDi_tour"
        app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
        app:layout_constraintTop_toTopOf="@+id/txt_diemDi_tour"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txt_diemDi_tour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_diemDen_tour"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/txt_gia"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_tour"
        app:layout_constraintStart_toStartOf="@+id/txt_diemDen_tour"
        app:layout_constraintTop_toBottomOf="@+id/txtNgayBatDau" />

    <Button
        android:id="@+id/btn_join"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txt_diemDi_tour"
        android:text="Join"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:lines="2"
        android:background="@drawable/button2_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txt_diemDi_tour"
        android:text="Cancel"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:lines="2"
        android:background="@drawable/button3_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/txtNgayBatDau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="BBQ Thịt Nướng"
        app:layout_constraintStart_toStartOf="@+id/txt_diemDen_tour"
        app:layout_constraintTop_toBottomOf="@+id/txt_diemDen_tour" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="Price:"
        app:layout_constraintBottom_toBottomOf="@+id/txt_diemDi_tour"
        app:layout_constraintEnd_toStartOf="@+id/txt_gia"
        app:layout_constraintTop_toTopOf="@+id/txt_diemDi_tour" />


</androidx.constraintlayout.widget.ConstraintLayout>