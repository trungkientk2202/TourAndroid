<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:id="@+id/linearLayout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center"
            android:paddingVertical="10dp"
            android:text="Login by phone"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout_top">

        <ImageView
            android:src="@drawable/travel_logo"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <EditText
            android:id="@+id/register_sdt"
            android:layout_marginTop="20dp"
            android:phoneNumber="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:paddingVertical="20dp"
            android:hint="Your Phone" />
        <EditText
            android:id="@+id/register_name"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:paddingVertical="20dp"
            android:hint="Your Name" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:text="Giới tính:"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_height="60dp" />
            <RadioGroup
                android:id="@+id/register_sex"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="60dp">
                <RadioButton
                    android:id="@+id/register_male"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:text="Male"
                    android:maxLines="1"
                    android:paddingVertical="20dp" />
                <RadioButton
                    android:id="@+id/register_female"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:text="Female"
                    android:maxLines="1"
                    android:paddingVertical="20dp" />
            </RadioGroup>

        </LinearLayout>

        <EditText
            android:id="@+id/register_birthday"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:paddingVertical="20dp"
            android:hint="Your Birthday" />

        <EditText
            android:id="@+id/register_password"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:password="true"
            android:paddingVertical="20dp"
            android:hint="Password" />

        <EditText
            android:id="@+id/register_confirm_password"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:password="true"
            android:maxLines="1"
            android:paddingVertical="20dp"
            android:hint="Confirm Password" />
        <EditText
            android:id="@+id/register_zalo"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="1"
            android:paddingVertical="20dp"
            android:hint="Your Zalo" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:fontFamily="@font/open_sans_bold"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:text="@string/register_policy"
            android:paddingHorizontal="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>