<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_ordered_price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Phone number:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_title" />

    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Add User"
        android:textColor="#919191"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_title"
        android:hint="Enter user's phone"
        android:textSize="16sp"
        android:gravity="start|start"
        android:padding="5dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_ordered_price2"
        tools:layout_editor_absoluteY="115dp" />

    <ImageView
        android:id="@+id/imageView_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/editText_phone"
        app:layout_constraintTop_toTopOf="@id/editText_phone"
        app:layout_constraintBottom_toBottomOf="@id/editText_phone"
        app:srcCompat="?android:attr/actionModeWebSearchDrawable"
        android:contentDescription="@string/cart"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/user_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_phone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_addUser"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/editText_phone"
        android:layout_marginTop="5dp"
        android:text="Add"
        android:background="@drawable/button2_bg"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_recycler" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_cancel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/editText_phone"
        android:text="Cancel"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button3_bg"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/button_addUser"
        app:layout_constraintEnd_toStartOf="@+id/button_addUser"
        app:layout_constraintTop_toTopOf="@+id/button_addUser" />
</androidx.constraintlayout.widget.ConstraintLayout>