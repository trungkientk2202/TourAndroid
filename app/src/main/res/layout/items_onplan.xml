<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_tour"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundOutline"
            tools:srcCompat="@drawable/asiafood2" />

        <TextView
            android:id="@+id/txt_diemDen_tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/img_tour"
            android:text="Tour's name"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_tour"
            app:layout_constraintTop_toTopOf="@+id/img_tour" />

        <TextView
            android:id="@+id/txt_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="99.000 Ä‘"
            app:layout_constraintStart_toStartOf="@+id/txt_diemDen_tour"
            app:layout_constraintTop_toBottomOf="@+id/txt_diemDen_tour" />

        <TextView
            android:id="@+id/txt_diemDi_tour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_diemDen_tour"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/img_tour"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/txt_from"
            app:layout_constraintStart_toEndOf="@id/txt_from"
            app:layout_constraintTop_toTopOf="@+id/txt_from"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txt_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_diemDen_tour"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/txt_diemDi_tour"
            android:text="From:"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/img_tour"
            app:layout_constraintStart_toStartOf="@+id/txt_diemDen_tour"
            app:layout_constraintTop_toBottomOf="@+id/txt_gia" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_preview"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/txt_from"
            android:background="@drawable/button2_bg"
            android:lines="2"
            android:text="Preview"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_setTT"
            android:layout_width="85dp"
            android:layout_marginRight="12px"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/txt_from"
            android:background="@drawable/button2_bg"
            android:lines="2"
            android:text="Start"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/txt_diemDi_tour"
            app:layout_constraintEnd_toStartOf="@id/btn_preview"
            app:layout_constraintTop_toTopOf="@+id/txt_diemDi_tour"/>

        <TextView
            android:id="@+id/txtNgayBatDau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:maxWidth="70dp"
            android:text="04/12/2020 04:30 PM"
            android:textAlignment="textEnd"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/txt_diemDen_tour"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_diemDen_tour" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider5"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_margin="3dp"
        android:background="?android:attr/listDivider"/>

