<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/restaurant_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="@drawable/box_shadow"
        android:elevation="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundOutline"
        app:srcCompat="@drawable/popular1" />

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:fontFamily="@font/open_sans_bold"
        android:maxLines="2"
        android:textAlignment="center"
        android:text="Nasi Padang"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/restaurant_image"
        app:layout_constraintStart_toStartOf="@+id/restaurant_image"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_image" />
</androidx.constraintlayout.widget.ConstraintLayout>
